# ==============================
# Shared Environment Template
# ==============================
# Copy to .env and adjust for your local environment.

# --- Application ---
PROJECT_NAME="Sisyphus X"
API_V1_STR="/api/v1"
FRONTEND_URL="http://localhost:5173"
API_DOMAIN="http://localhost:8000"

# --- Security ---
SECRET_KEY="change-me-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
AUTH_DISABLED=true

# --- Database ---
# Local SQLite example:
DATABASE_URL="sqlite+aiosqlite:///./sisyphus.db"
# PostgreSQL example:
# DATABASE_URL="postgresql+asyncpg://sisyphus:sisyphus_password@localhost:5432/sisyphus_x"

# --- Redis ---
REDIS_URL="redis://localhost:6379/0"

# --- MinIO ---
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="sisyphus-assets"
MINIO_USE_SSL=false
MINIO_SECURE=false

# --- Frontend (Vite) ---
VITE_API_BASE_URL="http://localhost:8000/api/v1"
VITE_AUTH_DISABLED=true
VITE_DEV_MODE_SKIP_LOGIN=true

# --- OAuth (optional) ---
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- LLM ---
LLM_PROVIDER="openai"
LLM_API_KEY=""
LLM_MODEL="gpt-4o-mini"

# --- Executor ---
EXECUTOR_ENGINE="sisyphus_api_engine"
EXECUTOR_VERSION="1.0.2"

# --- Encryption ---
ENCRYPTION_KEY=""
